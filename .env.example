# Server Configuration
PORT=3000
NODE_ENV=development

# LLM API Configuration
LLM_API_URL=https://llmrouter-production.up.railway.app/api/query

# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=google_credentials.json
GMAIL_TOKEN_PATH=token.json
GMAIL_CHECK_INTERVAL=*/1 * * * *
GMAIL_FILTER=from:furnishedfinder.com
ERROR_NOTIFICATION_EMAIL=your-email@example.com

# Furnished Finder Configuration
FF_AUTH_STATE_PATH=auth-state.json
HEADLESS=true

# Telegram Configuration (for response approval)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Database
# No config needed - SQLite uses local file: messages.db
